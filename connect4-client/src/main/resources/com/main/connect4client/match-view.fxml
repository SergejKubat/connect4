<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.text.Font?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
            minWidth="-Infinity"
            prefHeight="600.0" prefWidth="800.0" stylesheets="@css/base.css"
            xmlns="http://javafx.com/javafx/17" fx:controller="com.main.connect4client.controllers.MatchController">
    <HBox alignment="CENTER" prefHeight="420.0" prefWidth="800.0">
        <GridPane fx:id="boardContainer" prefHeight="420.0" prefWidth="480.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="480.0" minWidth="10.0" prefWidth="480.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints maxHeight="420.0" minHeight="10.0" prefHeight="420.0" vgrow="SOMETIMES"/>
            </rowConstraints>
        </GridPane>
    </HBox>
    <HBox alignment="CENTER" layoutY="480.0" prefWidth="800.0">
        <VBox alignment="CENTER" spacing="5.0">
            <Label fx:id="statusLabel" text="Your turn" textFill="WHITE">
                <font>
                    <Font name="Arial" size="24.0"/>
                </font>
            </Label>
            <Circle fx:id="statusCircle" fill="#ff1f1f" radius="20.0" stroke="BLACK" strokeMiterLimit="5.0"
                    strokeType="INSIDE"/>
        </VBox>
    </HBox>
</AnchorPane>
