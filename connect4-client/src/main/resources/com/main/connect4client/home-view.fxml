<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:id="homeContainer" maxHeight="-Infinity" maxWidth="-Infinity"
            minHeight="-Infinity"
            minWidth="-Infinity" prefHeight="600.0" prefWidth="800.0" stylesheets="@css/base.css"
            xmlns="http://javafx.com/javafx/17" fx:controller="com.main.connect4client.controllers.fxml.HomeController">
    <HBox alignment="CENTER" prefHeight="180.0" prefWidth="800.0">
        <ImageView fitHeight="180.0" fitWidth="360.0" pickOnBounds="true" preserveRatio="true">
            <Image url="@./images/logo.png"/>
        </ImageView>
    </HBox>
    <HBox alignment="CENTER" layoutY="225.0" prefWidth="800.0">
        <VBox alignment="CENTER" prefHeight="250.0" prefWidth="250.0" spacing="25.0">
            <Button fx:id="openSignInBtn" alignment="CENTER" prefHeight="40.0" prefWidth="180.0" text="Sign In"
                    textAlignment="CENTER" textFill="WHITE">
                <font>
                    <Font name="Arial" size="16.0"/>
                </font>
                <cursor>
                    <Cursor fx:constant="HAND"/>
                </cursor>
            </Button>
            <Button fx:id="openSignUpBtn" alignment="CENTER" prefHeight="40.0" prefWidth="180.0" text="Sign Up"
                    textAlignment="CENTER" textFill="WHITE">
                <font>
                    <Font name="Arial" size="16.0"/>
                </font>
                <cursor>
                    <Cursor fx:constant="HAND"/>
                </cursor>
            </Button>
        </VBox>
    </HBox>
</AnchorPane>
