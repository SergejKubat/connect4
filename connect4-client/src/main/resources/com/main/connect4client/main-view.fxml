<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.input.KeyCodeCombination?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import java.net.URL?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:id="mainContainer" prefHeight="600.0" prefWidth="800.0"
            styleClass="background" xmlns="http://javafx.com/javafx/21"
            fx:controller="com.main.connect4client.controllers.MainController">
    <stylesheets>
        <URL value="@css/base.css"/>
        <URL value="@css/menu.css"/>
    </stylesheets>
    <MenuBar prefHeight="40.0" prefWidth="800.0">
        <Menu mnemonicParsing="false" text="Play">
            <MenuItem mnemonicParsing="false" onAction="#openNewGamePage" text="New Match">
                <accelerator>
                    <KeyCodeCombination alt="UP" code="N" control="DOWN" meta="UP" shift="UP" shortcut="UP"/>
                </accelerator>
            </MenuItem>
        </Menu>
        <Menu mnemonicParsing="false" text="Rankings">
            <MenuItem mnemonicParsing="false" onAction="#openRankingPage" text="Rank List">
                <accelerator>
                    <KeyCodeCombination alt="UP" code="L" control="DOWN" meta="UP" shift="UP" shortcut="UP"/>
                </accelerator>
            </MenuItem>
        </Menu>
        <Menu mnemonicParsing="false" text="Help">
            <MenuItem mnemonicParsing="false" onAction="#openRulesPage" text="Rules">
                <accelerator>
                    <KeyCodeCombination alt="UP" code="R" control="DOWN" meta="UP" shift="UP" shortcut="UP"/>
                </accelerator>
            </MenuItem>
            <MenuItem mnemonicParsing="false" onAction="#openTutorial" text="Tutorial">
                <accelerator>
                    <KeyCodeCombination alt="UP" code="T" control="DOWN" meta="UP" shift="UP" shortcut="UP"/>
                </accelerator>
            </MenuItem>
            <SeparatorMenuItem mnemonicParsing="false"/>
            <MenuItem mnemonicParsing="false" onAction="#openAboutPage" text="About"/>
        </Menu>
    </MenuBar>
    <HBox alignment="CENTER" layoutY="40.0" prefHeight="180.0" prefWidth="800.0">
        <ImageView fitHeight="180.0" fitWidth="360.0" pickOnBounds="true" preserveRatio="true">
            <Image url="@./images/logo.png"/>
        </ImageView>
    </HBox>
    <HBox alignment="CENTER" layoutY="220.0" prefWidth="800.0">
        <Label fx:id="welcomeText" text="Welcome, User!" textFill="WHITE">
            <font>
                <Font name="Arial" size="32.0"/>
            </font>
        </Label>
    </HBox>
    <HBox alignment="CENTER" layoutY="300.0" prefWidth="800.0">
        <GridPane prefWidth="400.0" vgap="5.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <Label text="Email:" textFill="WHITE" GridPane.halignment="CENTER" GridPane.valignment="CENTER">
                <font>
                    <Font name="Arial" size="14.0"/>
                </font>
            </Label>
            <Label layoutX="10.0" layoutY="18.0" text="user@gmail.com" textFill="WHITE" GridPane.columnIndex="1"
                   GridPane.halignment="CENTER" GridPane.valignment="CENTER">
                <font>
                    <Font name="Arial" size="14.0"/>
                </font>
            </Label>
            <Label layoutX="10.0" layoutY="18.0" text="Wins:" textFill="WHITE" GridPane.halignment="CENTER"
                   GridPane.rowIndex="1" GridPane.valignment="CENTER">
                <font>
                    <Font name="Arial" size="14.0"/>
                </font>
            </Label>
            <Label layoutX="10.0" layoutY="48.0" text="22" textFill="WHITE" GridPane.columnIndex="1"
                   GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.valignment="CENTER">
                <font>
                    <Font name="Arial" size="14.0"/>
                </font>
            </Label>
            <Label layoutX="110.0" layoutY="48.0" text="Defeats:" textFill="WHITE" GridPane.halignment="CENTER"
                   GridPane.rowIndex="2" GridPane.valignment="CENTER">
                <font>
                    <Font name="Arial" size="14.0"/>
                </font>
            </Label>
            <Label layoutX="10.0" layoutY="78.0" text="8" textFill="WHITE" GridPane.columnIndex="1"
                   GridPane.halignment="CENTER" GridPane.rowIndex="2" GridPane.valignment="CENTER">
                <font>
                    <Font name="Arial" size="14.0"/>
                </font>
            </Label>
            <Label layoutX="110.0" layoutY="78.0" text="Matches played:" textFill="WHITE" GridPane.halignment="CENTER"
                   GridPane.rowIndex="3" GridPane.valignment="CENTER">
                <font>
                    <Font name="Arial" size="14.0"/>
                </font>
            </Label>
            <Label layoutX="10.0" layoutY="108.0" text="30" textFill="WHITE" GridPane.columnIndex="1"
                   GridPane.halignment="CENTER" GridPane.rowIndex="3" GridPane.valignment="CENTER">
                <font>
                    <Font name="Arial" size="14.0"/>
                </font>
            </Label>
            <Label layoutX="110.0" layoutY="108.0" text="Registered at:" textFill="WHITE" GridPane.halignment="CENTER"
                   GridPane.rowIndex="4" GridPane.valignment="CENTER">
                <font>
                    <Font name="Arial" size="14.0"/>
                </font>
            </Label>
            <Label layoutX="10.0" layoutY="140.0" text="02/18/2024" textFill="WHITE" GridPane.columnIndex="1"
                   GridPane.halignment="CENTER" GridPane.rowIndex="4" GridPane.valignment="CENTER">
                <font>
                    <Font name="Arial" size="14.0"/>
                </font>
            </Label>
            <HBox.margin>
                <Insets/>
            </HBox.margin>
        </GridPane>
    </HBox>
    <HBox alignment="CENTER" layoutY="520.0" prefWidth="800.0">
        <Button mnemonicParsing="false" onAction="#signOut" prefWidth="180.0" styleClass="btn-red" text="Sign Out">
            <cursor>
                <Cursor fx:constant="HAND"/>
            </cursor>
        </Button>
    </HBox>
</AnchorPane>
